public class BiggestNumberBetween3
{
    public static void main (String args[])
    {
        int a=50;
        int b=-60;
        int c=80;
        if (a>b && a>c)
        {    
                System.out.println ("The biggest number " +a); 
        }
        else if (b>c && b>a)
        { 
           System.out.println ("The biggest number: " +b);
        }    
    
        else
        {
            System.out.println ("The biggest number " +c);
        }
        if (a<0)
        
       {
            System.out.println ("The negative number is" +a);
        }
        if (b<0)
        
       {
            System.out.println ("The negative number is" +b);
        }
         if (c<0)
        
       {
            System.out.println ("The negative number is" +c);
        }   
    }
    
    
   } 

